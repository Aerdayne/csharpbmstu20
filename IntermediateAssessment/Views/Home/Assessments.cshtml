@model IntermediateAssessment.Models.StudentAssessments

@{
    ViewBag.Title = "Список рубежных контролей";
}

<h2>Студент</h2>
<table class="table-bordered col-md-4">
    <tr>
        <td class="bg-light col-md-2">@Html.DisplayNameFor(model => model.Student.FirstName)</td>
        <td class="col-md-2">@Html.DisplayFor(model => model.Student.FirstName)</td>
    </tr>
    <tr>
        <td class="bg-light col-md-2">@Html.DisplayNameFor(model => model.Student.LastName)</td>
        <td class="col-md-2">@Html.DisplayFor(model => model.Student.LastName)</td>
    </tr>
    <tr>
        <td class="bg-light col-md-2">@Html.DisplayNameFor(model => model.Student.Group)</td>
        <td class="col-md-2">@Html.DisplayFor(model => model.Student.Group)</td>
    </tr>
    <tr>
        <td class="bg-light col-md-2">@Html.DisplayNameFor(model => model.Student.FileNumber)</td>
        <td class="col-md-2">@Html.DisplayFor(model => model.Student.FileNumber)</td>
    </tr>
</table>
<hr/>
@foreach (var item in Model.Assessments)
{
    using (Html.BeginForm("Assessment", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("sid", Model.Student.ID)
        @Html.Hidden("aid", item.ID)
        <div class="table">
            <input type="submit" value="@item.Name" class="btn btn-success col-md-4" />
        </div>
    }
}

